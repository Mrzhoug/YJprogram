<script type="text/javascript" language="javascript">
    function doDownload()
    {
        if (InfoJet_IsValid()==false)
        {
            alert("请将必填项填完(带红星的输入框)!");
            return false;
        }
        document.forms( "xmlForm" ).action = "Questionnaire3.aspx";
        document.forms( "xmlForm" ).submit();
    }
  
  
</script>

