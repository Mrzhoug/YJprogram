    Function EnterStr(ByVal str As String)
        Dim i As Integer
        Dim Restr As String = ""
        For i = 1 To str.Length
            If Mid(str, i, 1) <> "_" Then Restr += Mid(str, i, 1) & "<br>"
        Next
        Return Restr
    End Function

