            Tb = Base.DB.Table("select SPBZ,ZFBZ,GY_XMSP.KSDM,MKDM,KSMC from GY_XMSP,GY_KSDM where GY_KSDM.KSDM=GY_XMSP.KSDM and Cid = " & GridView1.DataKeys(i).Item(0), "GY_XMSP")
            If Tb.Rows.Count > 0 Then

