                '   Response.End()
                If shapenr <> "N" And shapenr <> "Y" And shapenr <> "是" And shapenr <> "否" And shapenr <> "" Then
                    xmltb = Base.DB.Table("select id,lcname,shapeid from lc_order where shapeid='" & shapeid & "' ", "aa")
