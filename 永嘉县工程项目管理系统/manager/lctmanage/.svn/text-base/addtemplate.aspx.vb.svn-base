                        Base.DB.Query("update lc_order set lcname='" & shapenr & "' where shapeid='" & shapeid & "'")
                    Else
                        Base.DB.Query("insert into lc_order(lcname,shapeid) values('" & shapenr & "','" & shapeid & "')")
