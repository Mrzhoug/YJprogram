                        GridView1.Rows(i).Cells(6).Text = "<a href='#' onclick='javascript:renameFolder(" + folderID.ToString() + ")'>重命名</a>"
                        GridView1.Rows(i).Cells(7).Text = "<a href='#' onclick='javascript:deleteFolder(" + folderID.ToString() + ")'>删除</a>"
