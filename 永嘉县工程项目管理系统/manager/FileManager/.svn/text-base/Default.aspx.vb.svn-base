                Dim fileSize As Integer = GridView1.Rows(i).Cells(3).Text
                Dim fileSizeKB As Double = fileSize / 1024
                GridView1.Rows(i).Cells(3).Text = fileSizeKB.ToString("f2") + "K"


                If isPublicFolder Then
                    If userPermission.CanRename Then
