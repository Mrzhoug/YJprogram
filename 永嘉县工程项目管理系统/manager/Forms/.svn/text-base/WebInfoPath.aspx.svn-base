        //重置窗体大小。
        function ResetWindows(width1, height1) {
            var winWidth = 0;
            var winHeight = 0;
            if (width1 == 0 || height1 == 0) {
                //必须刷新二次才能达到最大化
                self.resizeTo(screen.availWidth, screen.availHeight);
                self.moveTo(0, 0);
                window.focus();
                self.resizeTo(screen.availWidth, screen.availHeight);
                self.moveTo(0, 0);
                window.focus();
            }
            else {           //按规定大小显示
                self.resizeTo(width1, height1);
                self.moveTo(0, 0);
                window.focus();
            }
        }

    </script>


